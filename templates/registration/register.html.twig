{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="col-md-4 col-md-offset-4 panel panel-default" style="margin-top: 10%">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal" align="center">Registration</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <p>
            <button type="submit" class="class= btn-primary btn">Register</button>
        </p>

        <p>
            <a href="{{ url('login')}}">Login</a>
        </p>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
