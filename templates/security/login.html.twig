{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="col-md-4 col-md-offset-4 panel panel-default" style="margin-top: 10%">

    <h1 class="h3 mb-3 font-weight-normal" align="center">Please sign in</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <p><label for="inputEmail">Email</label></p>
        <p><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus></p>
        <p><label for="inputPassword">Password</label></p>
        <p><input type="password" name="password" id="inputPassword" class="form-control" required></p>

        <p>
            <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
            >
        </p>

        <p>
            <button class="btn btn-primary" type="submit">
                Sign in
            </button>
        </p>
        <p>
            <a href="{{ url('register')}}">
                Register
            </a>
        </p>
    </form>

</div>
{% endblock %}
