{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <p><label for="inputEmail">Email</label></p>
    <p><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus></p>
    <p><label for="inputPassword">Password</label></p>
    <p><input type="password" name="password" id="inputPassword" class="form-control" required></p>

    <p>
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >
    </p>

    <p>
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </p>
    <p>
        <a href="{{ url('register')}}">
            Register
        </a>
    </p>
</form>
{% endblock %}
